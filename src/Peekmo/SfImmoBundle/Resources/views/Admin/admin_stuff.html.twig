{% extends 'PeekmoSfImmoBundle:Admin:admin_base.html.twig' %}

{% block title %}{{ parent() }} - Index{% endblock %}


{% block body %}
    <div id="wrapper" ng-controller="Stuff">
        <div id="page-wrapper">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-clock-o"></i> Équipements</h3>
                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item" ng-repeat="equipement in stuff">
                                <span class="badge btn">Supprimer</span>
                                <span class="badge btn">Éditer</span>
                                [{ equipement.nom }]
                            </a>
                            <a href="#" class="list-group-item">
                                <form class="form-inline " role="form">
                                    <input type="text" ng-model="new" class="form-control"/>
                                    <button class="btn btn-primary" ng-click="add()">+</button>
                                </form>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}